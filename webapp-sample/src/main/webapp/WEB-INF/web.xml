<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>ServletUrlInformation</servlet-name>
        <servlet-class>org.kodejava.example.servlet.ServletUrlInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUrlInformation</servlet-name>
        <url-pattern>/urlinfo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContextPathDemo</servlet-name>
        <servlet-class>org.kodejava.example.servlet.ContextPathDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContextPathDemo</servlet-name>
        <url-pattern>/ctxpath</url-pattern>
    </servlet-mapping>
</web-app>
